<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SignInFragment">


    <ImageView
        android:id="@+id/image_view_sign_in"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/image_description"
        android:src="@drawable/home">

    </ImageView>

    <EditText
        android:id="@+id/emailOrPhone_edit_text_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_view_sign_in"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="@string/email_phone_edit_text"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textStyle="bold">

    </EditText>

    <EditText
        android:id="@+id/password_edit_text_signIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailOrPhone_edit_text_signIn"
        android:layout_centerHorizontal="true"
        android:hint="@string/password_edit_text"
        android:textAlignment="center"
        android:textColor="@color/red"
        android:textStyle="bold">

    </EditText>

    <Button
        android:id="@+id/sign_in_confirm_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/password_edit_text_signIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@color/red"
        android:text="@string/confirm_button"
        android:textColor="@color/white"
        android:textStyle="bold">

    </Button>


</RelativeLayout>